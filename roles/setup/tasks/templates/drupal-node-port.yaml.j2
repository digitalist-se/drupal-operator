kind: Service
apiVersion: v1
metadata:
  name: "{{ ansible_operator_meta.name }}-np"
  namespace: "{{ ansible_operator_meta.namespace }}"
  labels:
    app: drupal
    site: "{{ ansible_operator_meta.name }}"
spec:
  type: NodePort
  ports:
    - port: {{ drupal_ports_port | int }}
      targetPort: {{ drupal_ports_container_port | int }}
  selector:
    drupal: "{{ ansible_operator_meta.name }}"
