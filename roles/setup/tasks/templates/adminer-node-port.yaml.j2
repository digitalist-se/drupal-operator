---
kind: Service
apiVersion: v1
metadata:
  name: "{{ ansible_operator_meta.name }}-adminer"
  namespace: "{{ ansible_operator_meta.namespace }}"
  labels:
    app: adminer
    site: "{{ ansible_operator_meta.name }}"
spec:
  type: NodePort
  ports:
    - name: adminer
      port: {{ adminer_container_port | int }}
      protocol: TCP
      targetPort: {{ adminer_target_port | int }}
  selector:
    adminer: "{{ ansible_operator_meta.name }}"
